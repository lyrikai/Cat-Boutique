<h1 class="text-center mt-5">Ajouter un chat ðŸ˜»</h1>

<div class="container">
  <% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
  <% end %>
  <%= form_with(model: @product) do |f| %>
  <div class="card d-flex justify-content-center">
    <div class="card-body">
      
      <div class="mb-3">
        <%= f.label :title, { class: "form-label"} %>
        <%= f.text_field :title, { class: "form-control", placeholder: "Nom du produit" } %>
      </div>
      
      <div class="mb-3">
        <%= f.label :description, { class: "form-label"} %>
        <%= f.text_field :description, { class: "form-control", placeholder: "Description" } %>
      </div>
      
      <div class="mb-3">
        <%= f.label :price, { class: "form-label"} %>
        <%= f.text_field :price, { class: "form-control", placeholder: "Prix" } %>
      </div>
      <div class="mb-3">
        <%= f.label :image, { class: "form-label"} %>
        <%= f.file_field :image, { class: "form-control", placeholder: "Image du produit" } %>
      </div>
      
      <%= f.submit "Submit", class: "btn btn-primary" %>
      
    </div>
  </div>
</div>
<% end %>