<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-4">
        <div class="card text-black">
          <i class="fab fa-apple fa-lg pt-3 pb-1 px-3"></i>
       <% if @prod.image.attached? %>
    <%= image_tag @prod.image %>
  <% end %>
          <div class="card-body">
            <div class="text-center">
              <h5 class="card-title"><%= @prod.title%></h5>
              <p class="text-muted mb-4" style="font-size: 12px;"><%= @prod.description%></p>
            </div>
            <div>
              <div class="d-flex justify-content-between">
               
              </div>
              <div class="d-flex justify-content-between">
                <span>Stock </span><span>50</span>
              </div>
              <div class="d-flex justify-content-between">
               <span>Prix</span><span><%= @prod.price%> â‚¬</span>
              </div>
            </div>
            <div class="d-flex justify-content-between total font-weight-bold mt-4">
             <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= hidden_field_tag 'id', @prod.id %>

      <%= submit_tag "Ajouter au panier", class:"btn btn-outline-primary" %>

<% end %> 
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

