<section class="h-100 cart" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Mon panier</h3>
          <div>
            <p class="mb-0"><span class="text-muted">Sort by:</span> <a href="#!" class="text-body">price <i class="fas fa-angle-down mt-1"></i></a></p>
          </div>
        </div>

          <% a = 0%>

        <% @cartlist.each do |i|%>

         <% a = a + i.product.price %>

        <div class="card rounded-3 mb-4">
          <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="col-md-2 col-lg-2 col-xl-2">
                <%= image_tag i.product.image,  style: 'height:100px;' %>
              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2"><%= i.product.title%></p>
                <p>  <%= link_to 'Supprimer du panier', cart_path(i), data: {turbo_method: :delete}, class:"btn btn-outline-danger" %></p>
              </div>
              <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                <button class="btn btn-link px-2" onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                  <i class="fas fa-minus"></i>
                </button>

                <button class="btn btn-link px-2" onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                  <i class="fas fa-plus"></i>
                </button>
              </div>
              <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                <h5 class="mb-0"><%= i.product.price%> €</h5>
              </div>
              <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                <a href="#!" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
              </div>
            </div>
          </div>
        </div>
        <%end%>

         <div class="card">
          <div class="card-body">
            <p class="btn btn-outline-primary">Total : <%= a%> €</p>
          </div>
        </div>

        <div class="card mt-3">
          <div class="card-body">
            <%= button_to "Payer", checkout_create_path(total: a),data: { turbo: false }, class: "btn btn-outline-primary"%>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

